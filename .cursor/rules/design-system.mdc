:root {
  /* Colors */
  --color-primary-purple: #8A2BE2;
  --color-primary-pink: #FF1493;
  --color-bg-dark: #121218;
  --color-surface-dark: #1E1E24;
  --color-dark-gray: #2A2A30;
  --color-medium-gray: #4D4D56;
  --color-light-gray: #9E9EA7;
  --color-white: #FFFFFF;
  
  /* Typography */
  --font-family: 'Inter', system-ui, -apple-system, sans-serif;
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size-md: 1rem;
  --font-size-lg: 1.125rem;
  /* Add other font sizes */
  
  /* Spacing */
  --space-2xs: 0.5rem;
  --space-xs: 0.75rem;
  --space-sm: 1rem;
  /* Add other spacing values */
  
  /* Borders & Shadows */
  --border-radius-sm: 4px;
  --border-radius-md: 8px;
  --border-radius-lg: 12px;
  --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 8px rgba(0, 0, 0, 0.35);
  --shadow-lg: 0 8px 16px rgba(0, 0, 0, 0.4);
  
  /* Transitions */
  --transition-quick: 150ms ease;
  --transition-medium: 300ms ease;
  --transition-slow: 500ms ease;
}
